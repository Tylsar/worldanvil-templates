		{% set imagebb = '[img:' ~ variables.image ~ '|center]' %}
		{{ imagebb }} 
	</div>
	<h3 class="m-b-0">{{variables.name|BBcode }}</h3>
	{% if variables.description %}
		<p>
			{{variables.description|BBcode|nl2br }}
		</p>
	{% endif %}
{% endblock %}