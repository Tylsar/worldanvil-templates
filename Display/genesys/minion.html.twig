{% extends 'RPGSRDBundle:Templates:base.html.twig' %}

{% block body %}
<div class="block">
    <h5 class="genesys">{{variables.name}}</h5>
    <p class="genesys">{{variables.description}}</p>
    <div class="characteristics">
        <span class="genesys bra">{{variables.bra}}</span>
        <span class="genesys agi">{{variables.agi}}</span>
        <span class="genesys int">{{variables.int}}</span>
        <span class="genesys cun">{{variables.cun}}</span>
        <span class="genesys wil">{{variables.wil}}</span>
        <span class="genesys pre">{{variables.pre}}</span>
    </div>
    <div class="minion">
        <span class="genesys soak">{{variables.soak}}</span>
        <span class="genesys wound">{{variables.wound_threshold}}</span>
        <span class="genesys mdef">{{variables.melee_defense}}</span>
        <span class="genesys rdef">{{variables.ranged_defense}}</span>
    </div>
    <ul class="genesys abilities">
        <li class="genesys">
            <strong class="genesys">Skills: </strong><span class="genesys">{{variables.skills}}</span>
        </li>
        <li class="genesys">
            <strong class="genesys">Talents: </strong><span class="genesys">{% if variables.talents %}{{variables.talents}}{% else %}None{% endif %}</span>
        </li>
        <li class="genesys">
            <strong class="genesys">Abilities: </strong><span class="genesys">{% if variables.abilities %}{{variables.abilities}}{% else %}None{% endif %}</span>
        </li>
        <li class="genesys">
            <strong class="genesys">Equipment: </strong><span class="genesys">{% if variables.equipment %}{{variables.equipment}}{% else %}None{% endif %}</span>
        </li>
    </ul>
</div>
{% endblock %}